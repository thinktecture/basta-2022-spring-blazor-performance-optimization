@if (_contribution != null)
{
    <MudDialog>
        <DialogContent>
            <EditForm class="d-flex flex-column" style="gap: 2rem;" Model="_contribution" OnSubmit="Submit">
                <CustomInput @bind-Value="_contribution.Title" PreventRendering="PreventRendering"  Label="Titel"></CustomInput>
				<HandleEventInputText @bind-Value="_contribution.Type" PreventRendering="PreventRendering" Label="Typ"></HandleEventInputText>
				<CustomInput @bind-Value="_contribution.PrimaryTag" PreventRendering="PreventRendering" Required="@true" Label="Primary Tag"></CustomInput>
				<CustomTextarea @bind-Value="_contribution.Abstract" PreventRendering="PreventRendering" Label="Beschreibung"></CustomTextarea>
            </EditForm>
        </DialogContent>
        <DialogActions>
            <MudButton ButtonType="ButtonType.Button" OnClick="Cancel">Abbrechen</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" OnClick="Submit">Speichern</MudButton>
        </DialogActions>
    </MudDialog>
}
